<Window x:Class="ParentProcess.Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ParentProcess.Demo"
        mc:Ignorable="d"
        Title="Process Demo" Height="450" Width="800"
        Closed="MainWindow_OnClosed">
    <Grid>
        <StackPanel VerticalAlignment="Center">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Width="120" Height="23" Click="StartClicked" Margin="5" Name="StartButton">Start</Button>
            <Button Width="120" Height="23" Click="StopClicked" Margin="5" Name="StopButton">Stop</Button>
            </StackPanel>
            <CheckBox IsEnabled="False" HorizontalAlignment="Center" IsChecked="{Binding Path=Running}">Running</CheckBox>
            <Label Content="{Binding Path=WindowHandle}" HorizontalAlignment="Center"></Label>
        </StackPanel>
    </Grid>
</Window>
